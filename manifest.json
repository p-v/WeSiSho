{
  "manifest_version": 2,

  "name": "WeSiSho",
  "description": "A chrome extension for adding shortcuts inside websites",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab", "storage",
    "https://ajax.googleapis.com/",
    "http://*/*", "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"], 
      "js": ["jquery.min.js", "./dist/app.js"], 
      "css": ["./node_modules/sweetalert2/dist/sweetalert2.min.css"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["./dist/background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": true
  }
}
